<p id="notice"><%= notice %></p>

<h1>Gamers</h1>

<table class="container">
  <thead>
    <tr>
      <th>Gname</th>
      <th>Gscore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gamers.each do |gamer| %>
      <tr>
        <td><%= gamer.gName %></td>
        <td><%= gamer.gScore %></td>
        <td><%= link_to 'Show', gamer %></td>
        <td><%= link_to 'Edit', edit_gamer_path(gamer) %></td>
        <td><%= link_to 'Destroy', gamer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

