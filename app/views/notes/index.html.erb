<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="header">Notes</h1>

<table class="container">
  <thead >
    <tr class="alert alert-danger">
      <th class="noteHeader">Note Header</th>
      <th class="noteContent">Note Content</th>
      <th class="noteContent"><%current_user.email %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <%if current_user.id == note.ownerId%>
      <tr class="alert alert-primary">
        <td><%= note.nHeader %></td>
        <td><%= note.nContent %></td>
        <td><%= link_to 'Show', note ,:class => "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_note_path(note),:class => "btn btn-warning" %></td>
        <td><%= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger" %></td>
      </tr>
      <%end %>

    <% end %>

  </tbody>

</table>

<br>
  <div>
   <%= link_to 'New Note', new_note_path , :id => "newNote",:class => "btn btn-primary" %>
  </div>
</div>
